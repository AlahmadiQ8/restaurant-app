@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>@Model.Location</span>
        <span>@Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail"
           asp-route-restaurantId="@Model.Id"
           class="btn btn-outline-primary btn-sm">
            More Details
        </a>
        <a asp-page="./Edit"
           asp-route-restaurantId="@Model.Id"
           class="btn btn-outline-primary btn-sm">
            Edit
        </a>
        <a asp-page="./Delete"
           asp-route-restaurantId="@Model.Id"
           class="btn btn-outline-primary btn-sm">
            Delete
        </a>
    </div>
</div>